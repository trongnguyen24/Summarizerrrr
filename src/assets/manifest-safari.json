{
  "manifest_version": 2,
  "name": "Summarizerrrr",
  "description": "Extension helps you summarize for YouTube, Udemy, Coursera, any websites. Crafted with superior UI/UX design.",
  "version": "2.1.5",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "64": "icon/64.png",
    "96": "icon/96.png",
    "128": "icon/128.png",
    "256": "icon/256.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "contextMenus",
    "scripting",
    "declarativeNetRequest"
  ],
  "browser_action": {
    "default_title": "Default Popup Title",
    "default_popup": "popop.html"
  },
  "background": { "scripts": ["background.js"], "persistent": false },
  "content_scripts": [
    {
      "matches": ["*://m.youtube.com/*", "*://www.youtube.com/*"],
      "js": [
        "libs/protobuf.min.js",
        "youtube_transcript.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    },
    { "matches": ["*://*/*"], "js": ["content-scripts/content.js"] },
    {
      "matches": ["*://*.coursera.org/learn/*"],
      "js": ["content-scripts/coursera.js"]
    },
    {
      "matches": ["*://*.udemy.com/course/*/learn/*"],
      "js": ["content-scripts/udemy.js"]
    },
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content-scripts/youtubetranscript.js"]
    }
  ],
  "web_accessible_resources": [
    "libs/protobuf.min.js",
    "youtube_transcript.js",
    "content-scripts/content.css"
  ]
}
