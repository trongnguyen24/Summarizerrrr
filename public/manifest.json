{
  "manifest_version": 3,
  "name": "Summarizerrrr",
  "version": "1.1.1",
  "description": "FREE Deep Summarizes content from YouTube, websites, Facebook posts, Reddit, and any text-based page online.",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["assets/youtubetranscript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Summarizerrrr"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
